{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo dev --parallel",
    "build": "dotenv -- turbo build",
    "start": "dotenv -- turbo start",
    "lint": "turbo lint",
    "test": "dotenv -- turbo test",
    "clean": "turbo clean && npkill",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md,json}\" --config .prettierrc.json  --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/node": "18.13.0",
    "dotenv-cli": "latest",
    "npkill": "^0.11.2",
    "prettier": "latest",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "latest"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  }
}
